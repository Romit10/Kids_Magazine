<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D7FBCB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <SeekBar
        android:id="@+id/seek_bar_speed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="100dp"
        android:layout_marginStart="178dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="22dp"
        android:layout_toRightOf="@id/button_speak_other"
        android:layout_marginBottom="160dp"
        android:progress="50" />

    <SeekBar
        android:id="@+id/seek_bar_pitch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="100dp"
        android:layout_marginStart="178dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="160dp"
        android:layout_toRightOf="@id/button_speak_other"
        android:progress="50" />

    <Button
        android:id="@+id/button_speak_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="#a0f684"
        android:enabled="false"
        android:text="@string/speak_bengali"
        android:textColor="#0f6537" />

    <LinearLayout
        android:id="@+id/story_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/seek_bar_pitch"
        android:layout_marginTop="-125dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:background="#a0f684"
            android:text="ToggleButton"
            android:textColor="#0f6537" />

        <TextView

            android:id="@+id/contentOfStory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30px"
            android:layout_marginTop="50px"
            android:fadeScrollbars="true"
            android:scrollbars="vertical"
            android:text="@string/sample_story_content"
            android:textAlignment="viewStart"
            android:drawableBottom="@color/colorPrimaryDark"

            android:textColor="#0f6537"
            android:textSize="17sp" />
        <View
            android:background="#0f6537"
            android:layout_height="2dp"
            android:layout_width="fill_parent"/>

         <TextView
            android:id="@+id/otherContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30px"
            android:fadeScrollbars="true"
            android:scrollbars="vertical"
            android:text="@string/translating"
            android:textAlignment="viewStart"
            android:textColor="#0f6537"
            android:textSize="17sp"

            />

    </LinearLayout>




</RelativeLayout>