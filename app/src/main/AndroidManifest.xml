<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iitbhu.KidsMagazine">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.iitbhu.KidsMagazine.UploadActivity"></activity>
        <activity
            android:name="com.iitbhu.KidsMagazine.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.iitbhu.KidsMagazine.ProfileActivity" />
        <activity android:name="com.iitbhu.KidsMagazine.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.iitbhu.KidsMagazine.Details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iitbhu.KidsMagazine.MainActivity" />
        </activity>
        <activity
            android:name="com.iitbhu.KidsMagazine.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.iitbhu.KidsMagazine.LanguageSelection" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>